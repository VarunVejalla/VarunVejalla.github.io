---
import { getCollection, type CollectionEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project }
  }));
}

type Props = {
  project: CollectionEntry<"projects">;
};

const { project } = Astro.props as Props;
const { Content } = await project.render();
---

<BaseLayout title={`${project.data.title} | Projects`} description={project.data.summary}>
  <article class="card prose">
    <p class="eyebrow">Project</p>
    <h1>{project.data.title}</h1>
    <p class="muted">{project.data.summary}</p>
    <p class="date-label">
      {project.data.date.toLocaleDateString("en-US", { month: "long", day: "numeric", year: "numeric" })}
    </p>

    {project.data.image && <img class="project-media" src={project.data.image} alt={`${project.data.title} preview`} />}

    <div class="tag-row">
      {project.data.technologies.map((tech) => <span class="tag">{tech}</span>)}
      {project.data.interactive && <span class="tag">Interactive</span>}
    </div>

    <div class="link-row">
      <a class="button" href={project.data.repoUrl} target="_blank" rel="noreferrer">GitHub Repo</a>
      {project.data.liveUrl && (
        <a
          class="button outline"
          href={project.data.liveUrl}
          target={project.data.liveUrl.startsWith("/") ? "_self" : "_blank"}
          rel="noreferrer"
        >
          Live Demo
        </a>
      )}
    </div>

    <Content />
  </article>
</BaseLayout>
